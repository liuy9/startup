<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/ToolBarStyle">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/toolbar_title_color"
        android:textSize="17sp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">
        <TextView
            android:id="@+id/tv_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="@color/toolbar_title_color_red"
            android:textSize="16sp"
            android:visibility="gone"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/right_red_point"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/tv_right_title"
            android:visibility="gone"
            android:src="@drawable/roundcorner_red"/>


    </RelativeLayout>



    <ImageView
        android:id="@+id/toobal_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:src="@drawable/icon_shared"
        android:visibility="gone"/>

</android.support.v7.widget.Toolbar>
